<div class="author">
  <h1 class="author__heading">Myself Kasim</h1>
  <p class="author_body">Intern at Bharat Intern</p>
</div>

<img
  src="/img/hero-image.avif"
  alt="person looking out"
  class="hero-image"
  width="981"
  height="527"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list_date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%=nextPage %>" class="pagination">&lt; View Older Posts</a>

  <% } %>
</section>
